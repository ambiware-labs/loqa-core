{
  "id": null,
  "title": "Loqa Overview",
  "tags": ["loqa"],
  "timezone": "browser",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "10s",
  "panels": [
    {
      "type": "stat",
      "title": "Known Nodes",
      "datasource": {
        "type": "prometheus",
        "uid": "Prometheus"
      },
      "targets": [
        {
          "expr": "loqa_capabilities_nodes",
          "refId": "A"
        }
      ],
      "gridPos": {"h": 6, "w": 6, "x": 0, "y": 0}
    },
    {
      "type": "stat",
      "title": "Capabilities Advertised",
      "datasource": {
        "type": "prometheus",
        "uid": "Prometheus"
      },
      "targets": [
        {
          "expr": "loqa_capabilities_total",
          "refId": "A"
        }
      ],
      "gridPos": {"h": 6, "w": 6, "x": 6, "y": 0}
    },
    {
      "type": "logs",
      "title": "Runtime Logs",
      "datasource": {
        "type": "loki",
        "uid": "Loki"
      },
      "targets": [
        {
          "expr": "{job=\"varlogs\"}",
          "refId": "A"
        }
      ],
      "gridPos": {"h": 10, "w": 12, "x": 0, "y": 6}
    }
  ]
}
